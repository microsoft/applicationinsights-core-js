{
  "compilerOptions": {
    "sourceMap": true,
    "inlineSources": true,
    "noImplicitAny": false,
    "module": "amd",
    "moduleResolution": "node",
    "target": "es5",
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "alwaysStrict": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "amd/bundle",
    "rootDir": "./",
    "suppressImplicitAnyIndexErrors": true
  },
  "include": [
    "./JavaScriptSDK/**/*",
    "./JavaScriptSDK.Enums/**/*",
    "./JavaScriptSDK.Interfaces/**/*"
  ],
  "excludes": ["node_modules"]
}